# Environment Configuration
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# Azure App Registration (from portal.azure.com)
ONENOTE_CLIENT_ID=your-client-id-here
ONENOTE_CLIENT_SECRET=your-client-secret-here

# Server Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=5000

# Security
SECRET_KEY=generate-a-random-secret-key-here

# OAuth Configuration
OAUTH_REDIRECT_URI=http://localhost:8888/callback
OAUTH_SCOPES=Notes.ReadWrite Notes.Create offline_access

# Application Settings
MAX_IMAGE_SIZE=10485760
LOG_LEVEL=INFO

# Production Settings (set to 'true' in production)
PRODUCTION=false
