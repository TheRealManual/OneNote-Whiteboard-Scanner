[flake8]
# Maximum line length
max-line-length = 120

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    node_modules,
    dist,
    build,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    portable-package

# Ignore specific error codes
ignore =
    E203,
    E266,
    W503,
    E501

# Select specific error codes to check
select = E,W,F,C,N,B

# Show source code for each error
show-source = True

# Show error codes in output
show-pep8 = True

# Count number of occurrences of each error/warning
count = True

# Enable flake8-bugbear checks
enable-extensions = B
