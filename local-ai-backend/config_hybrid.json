{
  "resize_to": null,
  "max_dimension": 3000,
  "preserve_native_resolution": false,
  "rectified_canvas": [2560, 1440],
  "preserve_aspect_ratio": true,

  "illumination": { 
    "enabled": true, 
    "blur_sigma": 31,
    "clahe": true,
    "background_subtract": false,
    "median_blur_size": 51,
    "denoise": false
  },

  "board_detect": {
    "modes": ["contour_quad", "hough_quad", "sam_fallback"],
    "sam_points_per_side": 8,
    "sam_timeout_ms": 2500
  },

  "stroke_extract": {
    "use_classical": true,
    "use_u2net": false,
    "use_tile_segmentation": true,
    "tile_overlap": 0.5,
    "u2net_backend": "auto",
    "u2net_threshold": 0.6,
    "color_hsv_masks": true,
    "adaptive_block": 31,
    "adaptive_c": 15,
    "auto_calibrate_threshold": false,
    "canny": [80, 200],
    "canny_structure_only": false,
    "morph_open": 1,
    "morph_close": 1,
    "min_area_px": 80,
    "min_skel_len_px": 20
  },

  "vectorize": {
    "skeletonize": true,
    "gap_close_px": 4,
    "rdp_epsilon_px": 1.0,
    "colorize_from_source": false,
    "stroke_width_px": 2.5,
    "transparent_bg": true
  }
}
