{
  "resize_to": [960, 540],
  "rectified_canvas": [1280, 720],
  "preserve_aspect_ratio": true,

  "illumination": { 
    "enabled": true, 
    "blur_sigma": 21,
    "clahe": true,
    "background_subtract": false,
    "median_blur_size": 31
  },

  "board_detect": {
    "modes": ["contour_quad", "hough_quad", "sam_fallback"],
    "sam_points_per_side": 8,
    "sam_timeout_ms": 2500
  },

  "stroke_extract": {
    "use_classical": true,
    "use_u2net": false,
    "u2net_backend": "auto",
    "u2net_threshold": 0.6,
    "color_hsv_masks": true,
    "adaptive_block": 21,
    "adaptive_c": 12,
    "auto_calibrate_threshold": false,
    "canny": [70, 180],
    "canny_structure_only": false,
    "morph_open": 2,
    "morph_close": 4,
    "min_area_px": 40,
    "min_skel_len_px": 15
  },

  "vectorize": {
    "skeletonize": true,
    "gap_close_px": 4,
    "rdp_epsilon_px": 1.0,
    "colorize_from_source": false,
    "stroke_width_px": 2.5,
    "transparent_bg": true
  }
}
